datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt   DateTime     @default(now())
  email       String?      @unique
  firstName   String?
  id          String       @id @default(cuid())
  lastName    String?
  password    String
  roles       Json
  updatedAt   DateTime     @updatedAt
  userClinics UserClinic[]
  username    String       @unique
}

model UserRole {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model Clinic {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model UserClinic {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User[]
}

model CarePlanStatus {
  createdAt DateTime @default(now())
  id        Int      @id @default(autoincrement())
  name      String?
  updatedAt DateTime @updatedAt
}
